<body>
<%@ include file="Header.jsp"%>
	<main id="main">
<div id="roadview" style="width:100%;height:800px;"></div>
<input type="hidden" name="thLat" id="thLat" value="${throadmap.thLat}"/>
<input type="hidden" name="thLong" id="thLong" value="${throadmap.thLong}"/>

<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=0baef7a236dd6024098239bd8c5f2527"></script>
<script>
var roadviewContainer = document.getElementById('roadview'); //로드뷰를 표시할 div
var roadview = new kakao.maps.Roadview(roadviewContainer); //로드뷰 객체
var roadviewClient = new kakao.maps.RoadviewClient(); //좌표로부터 로드뷰 파노ID를 가져올 로드뷰 helper객체
var thLat =  document.getElementById("thLat").value; 
var thLong = document.getElementById('thLong').value; 

var position = new kakao.maps.LatLng(thLat ,thLong);

// 특정 위치의 좌표와 가까운 로드뷰의 panoId를 추출하여 로드뷰를 띄운다.
roadviewClient.getNearestPanoId(position, 50, function(panoId) {
    roadview.setPanoId(panoId, position); //panoId와 중심좌표를 통해 로드뷰 실행
});
</script>
</main>
